pipeline {
	agent any
 
	tools {
    	maven 'Maven'
    	jdk 'JDK17'
	}
 
	stages {
 
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/yasaswini2555/javascript_security_project.git'
        	}
    	}
 
        stage('Build') {
            steps {
                sh 'mvn clean package'
        	}
    	}
 
        stage('Test') {
            steps {
                sh 'mvn test'
        	}
    	}
 
        stage('Deploy to Azure') {
            steps {
                sh '''
                az webapp deploy \
                --resource-group MyRG \
                --name MyAzureApp \
                --src-path target/myapp.jar
                '''
        	}
    	}
	}
 
	post {
        success {
            echo "Deployment successful ğŸ‰"
    	}
        failure {
            echo "Pipeline failed âŒ"
    	}
	}
}
